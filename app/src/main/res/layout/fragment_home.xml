<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#bbefe3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/myNestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_scrollFlags="scroll|enterAlways|snap">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_gradient">

                    <com.romainpiel.shimmer.ShimmerTextView
                        android:id="@+id/shimmer_TopView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="TOP VIEW"
                        android:textColor="#fd08c25c"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnMoreXemNhieu"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:padding="1dp"
                        android:src="@drawable/ufi_more" />

                    <!--<ImageButton-->
                    <!--android:id="@+id/btnMoreXemNhieu"-->
                    <!--android:textSize="12sp"-->
                    <!--android:layout_width="32dp"-->
                    <!--android:layout_height="32dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:padding="15dp"-->
                    <!--android:background="@drawable/ufi_more"-->
                    <!--android:text="Xem Thêm"-->
                    <!--android:textColor="@color/blue"-->
                    <!--/>-->
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/myRecyclerViewTopView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#fafafa"
                    android:layout_gravity="center"
                    android:padding="4dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_gradient">

                    <com.romainpiel.shimmer.ShimmerTextView
                        android:id="@+id/shimmer_HOT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="TOP HOT 24h"
                        android:textColor="#fd08c25c"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnMoreHot"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:padding="1dp"
                        android:src="@drawable/ufi_more" />
                    <!--<ImageButton-->
                    <!--android:id="@+id/btnMoreHot"-->
                    <!--android:textSize="12sp"-->
                    <!--android:layout_width="32dp"-->
                    <!--android:layout_height="32dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:background="@drawable/morehome"-->
                    <!--android:text="Xem Thêm"-->
                    <!--android:textColor="@color/blue"-->
                    <!--/>-->
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/myRecyclerViewHot"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:background="#fafafa"
                    android:padding="4dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_gradient">

                    <com.romainpiel.shimmer.ShimmerTextView
                        android:id="@+id/shimmer_XemNhieuNhat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:text="TOP VIEW MOST"
                        android:textColor="#fd08c25c"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/myRecyclerViewXemNhieuNhat"
                    android:layout_width="match_parent"
                    android:background="#fafafa"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

                <RelativeLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_gradient">

                    <com.romainpiel.shimmer.ShimmerTextView
                        android:id="@+id/shimmer_MoiDang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="RECOMMENDED FOR YOU"
                        android:textColor="#fd08c25c"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnMoreMoiDang"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:padding="1dp"
                        android:src="@drawable/ufi_more" />
                    <!--<ImageButton-->
                    <!--android:id="@+id/btnMoreMoiDang"-->
                    <!--android:textSize="12sp"-->
                    <!--android:layout_width="32dp"-->
                    <!--android:layout_height="32dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:background="@drawable/morehome"-->
                    <!--android:text="Xem Thêm"-->
                    <!--android:textColor="@color/blue"-->
                    <!--/>-->
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/myRecyclerViewMoiDang"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#fafafa"
                    android:padding="4dp" />

                <RelativeLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_gradient">

                    <com.romainpiel.shimmer.ShimmerTextView
                        android:id="@+id/shimmer_TienHanh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="TOP TRENDING"
                        android:textColor="#fd08c25c"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnMoreTienHanh"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:padding="1dp"
                        android:src="@drawable/ufi_more" />
                    <!--<ImageButton-->
                    <!--android:id="@+id/btnMoreTienHanh"-->
                    <!--android:textSize="12sp"-->
                    <!--android:layout_width="32dp"-->
                    <!--android:layout_height="32dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:background="@drawable/morehome"-->
                    <!--android:text="Xem Thêm"-->
                    <!--android:textColor="@color/blue"-->
                    <!--/>-->
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/myRecyclerViewDangTienHanh"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="#fafafa"
                    android:padding="4dp" />
            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/ln_gif_loadhome"
        android:layout_height="match_parent">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gif_loadinghome"
            android:background="#ffffff"
            />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>