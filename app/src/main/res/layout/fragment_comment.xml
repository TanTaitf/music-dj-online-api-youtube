                        android:orientation="vertical"
                        android:padding="2dp"
                        android:weightSum="3.5">

                        <ImageView
                            android:id="@+id/centerImage"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_wellcom_2" />

